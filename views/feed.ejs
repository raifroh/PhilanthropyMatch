<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <% for(var i=0; i<projects.length; i++) {%>
      <div class="col-12 col-sm-6 col-md-4 col-lg-4">
        <div class="card mb-3">
          <img src="<%= projects[i].image%>" class="card-img-top img-fluid" style="max-height: 270px; max-width: 400px" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= projects[i].title%></h5>
            <a href="/project/<%= projects[i]._id%>" class="btn btn-primary">View project</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
<%- include('partials/footer') -%>